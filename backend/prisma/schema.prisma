
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User{
  id  String @id @default(uuid())
  name String
  email String @unique
  password String
  blogs Blog[]
}

model Blog{
  id String @id @default(uuid())
  title String
  content String
  published Boolean @default(false)
  createdAt String 
  author User @relation(fields: [authorId], references: [id])
  authorId String

}
